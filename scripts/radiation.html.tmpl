#encoding UTF-8
<!DOCTYPE html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <title>Radiation $station.location</title>
  <link rel="stylesheet" href="https://code.jquery.com/mobile/1.1.0/jquery.mobile-1.1.0.min.css" />
  <script src="https://code.jquery.com/jquery-1.7.1.min.js"></script>
  <script type="text/javascript" src="https://code.jquery.com/mobile/1.1.0/jquery.mobile-1.1.0.min.js"></script>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <div data-role="page" data-add-back-btn="true" data-theme="a">
    <div data-role="header">
      <h1>Radiation</h1>
    </div>
    <div data-role="content">
      <h4>24h radiation</h4>
      <img src="dayradiation.png"/>
      <p>
	min: $day.radiation.min at $day.radiation.mintime<br/>
	max: $day.radiation.max at $day.radiation.maxtime
      </p>
      <h4>7-day radiation</h4>
      <img src="weekradiation.png"/>
      <p>
	min: $week.radiation.min at $week.radiation.mintime<br/>
	max: $week.radiation.max at $week.radiation.maxtime
      </p>
      <h4>30-day radiation</h4>
      <img src="monthradiation.png"/>
      <p>
	min: $month.radiation.min at $month.radiation.mintime<br/>
	max: $month.radiation.max at $month.radiation.maxtime
      </p>
    </div>
    <div data-role="footer">
      <h4>weewx v$station.version</h4>
    </div>
  </div>
</body>

